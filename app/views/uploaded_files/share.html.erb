<div style="margin-top:15rem">
    <div class="card">
        <%= form_with(url: send_file_email_path, method: :post, local: true) do |form| %>
            <div class="form-group" style="margin-bottom: 20px;">
              <label for="file" class="form-label" style="font-size: 16px; font-weight: bold;">Select a File:</label>
              <%= form.select :file_id, @uploaded_files.collect { |file| [file.title, file.id] }, prompt: 'Choose a file', class: "form-control", style: "width: 100%; height: 50px; padding: 12px 15px; font-size: 16px; border-radius: 8px; border: 1px solid #ccc; appearance: none; -webkit-appearance: none; -moz-appearance: none;" %>
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
              <label for="email" class="form-label" style="font-size: 16px; font-weight: bold;">Recipient Email:</label>
              <%= form.email_field :email, placeholder: "Enter recipient's email", class: "form-control", style: "width: 100%; padding: 12px; font-size: 16px; border-radius: 8px; border: 1px solid #ccc;" %>
            </div>
            <br>
            <br>
            <div class="form-group" style="text-align: center; margin-top: 20px;">
              <%= form.submit "Send Email", class: "btn btn-primary", style: "width: 100%; padding: 15px; font-size: 18px; background-color: #28a745; color: white; border-radius: 8px; cursor: pointer; transition: background-color 0.3s;" %>
            </div>
        <% end %>      
    </div>
</div>
  