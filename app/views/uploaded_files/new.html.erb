<div style="margin-top:15rem">
<div class="card">
  <h2>Upload a New File</h2>
  <%= form_for @file_upload, html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'input-field', placeholder: 'Enter a title' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'input-field', placeholder: 'Enter a description' %>
    </div>
    <div class="form-group">
      <%= f.label :file %>
      <%= f.file_field :file, class: 'input-field' %>
    </div>
    <div class="form-group" style="margin-top:2rem">
      <%= f.submit 'Upload File', class: 'btn-submit' %>
    </div>
  <% end %>
</div>
</div>
